<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>

        <jdbcConnection driverClass="${db.mysql.driverClass}"
                        connectionURL="${db.mysql.url}"
                        userId="${db.mysql.username}"
                        password="${db.mysql.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.xdchen.netty.client.model" targetProject="./src/main/java"/>

        <sqlMapGenerator targetPackage="mappers"  targetProject="./src/main/resources"/>

        <javaClientGenerator targetPackage="com.xdchen.netty.client.dao" targetProject="./src/main/java" type="XMLMAPPER" />

        <!--<table tableName="user"/>-->
        <!--<table tableName="access_token"/>-->
    </context>
</generatorConfiguration>